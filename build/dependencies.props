<Project>

  <!-- Reference for the msbuild tags: https://docs.microsoft.com/en-us/dotnet/core/tools/csproj -->
  <PropertyGroup>
    <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
  </PropertyGroup>

  <PropertyGroup>
    <NetCoreVersion>3.1.19</NetCoreVersion>
    <SwashbuckleCommon>6.2.1</SwashbuckleCommon>
    <MicrosoftAzureStorageCommon>11.2.3</MicrosoftAzureStorageCommon>
    <BetCoreVersion>4.0.0</BetCoreVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net5.0' Or '$(TargetFramework)' == 'netstandard2.1'">
    <NetCoreVersion>5.0.*</NetCoreVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <NetCoreVersion>6.0.0-rc.1.*</NetCoreVersion>
  </PropertyGroup>

  <ItemGroup Label="Microsoft.AspNetCore">
    <PackageReference Update="Microsoft.AspNetCore.Mvc.Versioning.ApiExplorer" Version="4.2.0" />
    <PackageReference Update="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Identity.UI" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Authentication.JwtBearer" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.IdentityModel.Tokens" Version="6.12.2" />
    <PackageReference Update="Microsoft.ApplicationInsights.AspNetCore" Version="2.18.0" />
    <PackageReference Update="Serilog.AspNetCore" Version="4.1.0" />
    <PackageReference Update="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.11.*" />
    <PackageReference Update="Hellang.Middleware.ProblemDetails" Version="6.2.0" />
  </ItemGroup>

  <ItemGroup Label="Microsoft.EntityFrameworkCore">
    <PackageReference Update="Microsoft.EntityFrameworkCore.Relational" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.EntityFrameworkCore.Sqlite" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.EntityFrameworkCore.SqlServer" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.EntityFrameworkCore.Tools" Version="$(NetCoreVersion)" />
  </ItemGroup>

  <ItemGroup Label="Microsoft.Extensions.Hosting">
    <PackageReference Update="Microsoft.Extensions.Hosting" Version="$(NetCoreVersion)" />
    <PackageReference Update="Microsoft.Extensions.FileProviders.Embedded" Version="$(NetCoreVersion)" />
  </ItemGroup>

  <ItemGroup Label="Microsoft.Azure.KeyVault">
    <PackageReference Update="Microsoft.Azure.Services.AppAuthentication" Version="1.6.1" />
    <PackageReference Update="Microsoft.Azure.Storage.Blob" Version="$(MicrosoftAzureStorageCommon)" />
  </ItemGroup>

  <ItemGroup Label="Unit Tests">
    <PackageReference Update="Microsoft.NET.Test.Sdk" Version="16.11.0" />
    <PackageReference Update="Moq" Version="4.16.1" />
    <PackageReference Update="xunit" Version="2.4.1" />
    <PackageReference Update="xunit.runner.visualstudio" Version="2.4.3" />
    <PackageReference Update="coverlet.collector" Version="3.1.0" />
  </ItemGroup>

  <ItemGroup Label="Shared">
    <PackageReference Update="Certes" Version="2.3.4" />
    <PackageReference Update="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Update="CronScheduler.AspNetCore" Version="3.0.1" />
    <PackageReference Update="Microsoft.IO.RecyclableMemoryStream" Version="2.1.3" />
  </ItemGroup>

  <ItemGroup Label="Swashbuckle">
    <PackageReference Update="Swashbuckle.AspNetCore" Version="$(SwashbuckleCommon)" />
    <PackageReference Update="Swashbuckle.AspNetCore.Annotations" Version="$(SwashbuckleCommon)" />
    <PackageReference Update="Swashbuckle.AspNetCore.Newtonsoft" Version="$(SwashbuckleCommon)" />
  </ItemGroup>

  <ItemGroup Label="Bet.Extensions">
    <PackageReference Update="Bet.Extensions.Options" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.AzureStorage" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.LetsEncrypt" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.Logging" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.AzureVault" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.DataProtection" Version="$(BetCoreVersion)" />

    <PackageReference Update="Bet.Extensions.HealthChecks" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.ML.Sentiment" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.ML.Spam" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.ML.Azure" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.HealthChecks.ML" Version="$(BetCoreVersion)" />
    <PackageReference Update="Bet.Extensions.HealthChecks.AzureStorage" Version="$(BetCoreVersion)" />
  </ItemGroup>

  <ItemGroup Label="Analyzers">
    <PackageReference Include="Bet.CodeAnalyzers" Version="1.0.10" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../img/icon.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

</Project>
