{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core WebApi Sample",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Bet.AspNetCore.Sample/bin/Debug/netcoreapp3.1/Bet.AspNetCore.Sample.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Bet.AspNetCore.Sample/",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://*:443;http://*:80",
                // source link enabled
                "COMPlus_ZapDisable": "1",
                "COMPlus_ReadyToRun": "0"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            // enable source link debugging...
            // https://devblogs.microsoft.com/dotnet/improving-debug-time-productivity-with-source-link/#visual-studio-code
            "justMyCode": false,
            "symbolOptions": {
                "searchMicrosoftSymbolServer": true,
                "searchNuGetOrgSymbolServer": true
            },
            "suppressJITOptimizations": true,

            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Local Process with Kubernetes (Preview)",
            "type": "dev-spaces-connect-configuration",
            "request": "launch"
        }
    ]
}
